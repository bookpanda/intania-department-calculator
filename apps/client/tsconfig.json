{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$core/*": ["src/core/*"],    
      "$theme/*": ["src/theme/*"],      
      "$modules/*": ["src/modules/*"],
      "$styles/*": ["src/styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
